<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.japanase">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ase_sigla"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LevelGameOneActivity"></activity>
        <activity android:name=".GameOneActivity" />
        <activity android:name=".LevelQuizThreeActivity" />
        <activity android:name=".LevelQuizTwoActivity" />
        <activity android:name=".RecognizeActivity" />
        <activity
            android:name=".LevelQuizOneActivity"
            android:noHistory="true" />
        <activity
            android:name=".LevelListActivity"
            android:noHistory="true" />
        <activity
            android:name=".GameActivity"
            android:noHistory="true" />
        <activity
            android:name=".LearnActivity"
            android:noHistory="true" />
        <activity
            android:name=".HiraganaActivity"
            android:noHistory="true" />
        <activity
            android:name=".MenuActivity"
            android:noHistory="true" />
        <activity
            android:name=".MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>